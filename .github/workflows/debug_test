name: Debug Test
on:
  pull_request:
    types: [opened]
jobs:
  debug:
    runs-on: ubuntu-latest
    steps:
      - name: Dump Event Context
        run: |
          echo "### EVENT PAYLOAD ###"
          echo '${{ toJson(github.event) }}' | jq .
          echo "### GITHUB CONTEXT ###"
          echo '${{ toJson(github) }}' | jq .
